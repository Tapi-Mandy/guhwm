@import "waybar.css";

/* Optional alias for readability */
@define-color main @background;

* {
    font-family: "JetBrainsMono Nerd Font";
    font-weight: 700;
    font-size: 14px;
    min-height: 0;
    border: none;
    border-radius: 0px;
}

window#waybar {
    background-color: alpha(@background, 0.98);
    color: @on_surface;
    border-radius: 10px;
}

/* Logo / launcher */
#custom-logo {
    background-color: @primary;
    color: @on_primary;
    padding: 0 8px;
    font-weight: bold;
}

/* Tags / Workspaces */
#tags {
    background-color: transparent;
    margin-left: 0px;
    border-radius: 4px;
}

#tags button {
    padding: 0 6px;
    background-color: transparent;
    color: @secondary;
    border-radius: 0;
    min-width: 12px;
}

#tags button.focused {
    background-color: @secondary;
    color: @on_secondary;
}

#tags button:first-child {
   border-radius: 10px 0 0 10px;
   margin-left: 0;
}

/* Window title */
#window {
    margin-left: 10px;
    color: @primary;
}

/* Separators */
#custom-separator1,
#custom-separator2 {
    color: @outline;
    padding: 0 6px;
}

/* Custom module */
#custom-suckless {
    color: @tertiary;
    padding: 0 4px;
}

/* Tray */
#tray {
    background-color: transparent;
    padding: 0 8px;
}

#tray > .passive {
    -gtk-icon-effect: dim;
}

#tray > .needs-attention {
    -gtk-icon-effect: highlight;
}

/* Clock */
#clock {
    color: @primary;
    padding: 0 8px 0 4px;
}
